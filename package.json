{
  "name": "stgen",
  "displayName": "Stgen - DXF Viewer",
  "description": "DXF file viewer with annotation and AI integration for structural analysis",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "stgen.dxfViewer",
        "displayName": "DXF Viewer",
        "selector": [
          {
            "filenamePattern": "*.dxf"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "stgen.captureView",
        "title": "Capture DXF View as Image",
        "category": "Stgen"
      },
      {
        "command": "stgen.extractEntities",
        "title": "Extract DXF Entity Data",
        "category": "Stgen"
      },
      {
        "command": "stgen.addAnnotation",
        "title": "Add Annotation",
        "category": "Stgen"
      },
      {
        "command": "stgen.clearAnnotations",
        "title": "Clear All Annotations",
        "category": "Stgen"
      },
      {
        "command": "stgen.fitView",
        "title": "Fit View to Content",
        "category": "Stgen"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "stgen.captureView",
          "when": "activeCustomEditorId == stgen.dxfViewer",
          "group": "navigation"
        },
        {
          "command": "stgen.extractEntities",
          "when": "activeCustomEditorId == stgen.dxfViewer",
          "group": "navigation"
        },
        {
          "command": "stgen.fitView",
          "when": "activeCustomEditorId == stgen.dxfViewer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Stgen DXF Viewer",
      "properties": {
        "stgen.backgroundColor": {
          "type": "string",
          "default": "#1e1e1e",
          "description": "Background color for DXF viewer"
        },
        "stgen.antialias": {
          "type": "boolean",
          "default": true,
          "description": "Enable antialiasing"
        },
        "stgen.defaultAnnotationColor": {
          "type": "string",
          "default": "#ff0000",
          "description": "Default color for annotations"
        },
        "stgen.autoExportForClaude": {
          "type": "boolean",
          "default": true,
          "description": "Automatically export DXF context for Claude Code when a file is opened"
        },
        "stgen.mcpServerPort": {
          "type": "number",
          "default": 52789,
          "description": "Port for MCP bridge HTTP server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "compile:mcp": "tsc -p ./tsconfig.mcp.json",
    "watch": "tsc -watch -p ./",
    "build:webview": "webpack --mode production",
    "watch:webview": "webpack --mode development --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "three": "^0.161.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/three": "^0.161.2",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "copy-webpack-plugin": "^11.0.0"
  }
}
