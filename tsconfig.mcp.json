{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out/mcp",
		"rootDir": "src/mcp",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Node16",
		"declaration": false
	},
	"include": [
		"src/mcp/server.ts"
	],
	"exclude": [
		"node_modules"
	]
}
